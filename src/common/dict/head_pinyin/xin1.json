[{"line":"心思不能言，肠中车轮转","poemId":"poem_21"},{"line":"心远地自偏","poemId":"poem_44"},{"line":"心知去不归，且有后世名","poemId":"poem_48"},{"line":"心非木石岂无感","poemId":"poem_57"},{"line":"心逐南云逝，形随北雁来","poemId":"poem_77"},{"line":"心同流水净，身与白云轻","poemId":"poem_234"},{"line":"心断新丰酒，销愁斗几千","poemId":"poem_385"},{"line":"辛苦遭逢起一经，干戈寥落四周星","poemId":"poem_190"},{"line":"新妆宜面下朱楼，深锁春光一院愁","poemId":"poem_361"},{"line":"新知遭薄俗，旧好隔良缘","poemId":"poem_385"},{"line":"新鬼烦冤旧鬼哭，天阴雨湿声啾啾","poemId":"poem_583"},{"line":"欣欣此生意，自尔为佳节","poemId":"poem_523"}]