[{"line":"阳春布德泽，万物生光辉","poemId":"poem_24"},{"line":"独宿累长夜，梦想见容辉","poemId":"poem_29"},{"line":"贵戚权门得笔迹，始觉屏障生光辉","poemId":"poem_547"},{"line":"腾蛇乘雾，终为土灰","poemId":"poem_28"},{"line":"春心莫共花争发，一寸相思一寸灰","poemId":"poem_452"},{"line":"十五始展眉，愿同尘与灰","poemId":"poem_575"},{"line":"天寒水鸟自相依，十百为群戏落晖","poemId":"poem_136"},{"line":"参差连曲陌，迢递送斜晖","poemId":"poem_387"},{"line":"远树带行客，孤城当落晖","poemId":"poem_495"},{"line":"谁言寸草心，报得三春晖","poemId":"poem_589"},{"line":"欢言得所憩，美酒聊共挥","poemId":"poem_507"},{"line":"不据山河据平地，长戈利矛日可麾","poemId":"poem_536"}]