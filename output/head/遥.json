[{"line":"遥看孟津河，杨柳郁婆娑","poemId":"poem_73"},{"line":"遥望秦川，心肝断绝","poemId":"poem_78"},{"line":"遥知不是雪，为有暗香来","poemId":"poem_105"},{"line":"遥知朔漠多风雪，更待江南半月春","poemId":"poem_119"},{"line":"遥知兄弟登高处，遍插茱萸少一人","poemId":"poem_310"},{"line":"遥怜小儿女，未解忆长安","poemId":"poem_389"},{"line":"遥夜泛清瑟，西风生翠萝","poemId":"poem_427"},{"line":"遥窥正殿帘开处，袍袴宫人扫御床","poemId":"poem_489"},{"line":"遥见仙人彩云里，手把芙蓉朝玉京","poemId":"poem_540"},{"line":"遥看一处攒云树，近入千家散花竹","poemId":"poem_564"}]